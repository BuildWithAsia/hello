---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	prevPost?: { id: string; title: string } | null;
	nextPost?: { id: string; title: string } | null;
};

const { title, description, pubDate, updatedDate, heroImage, prevPost, nextPost } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.post-navigation {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 2em auto;
				padding: 1em;
				display: flex;
				justify-content: space-between;
				gap: 1em;
				border-top: 1px solid rgb(var(--gray-light));
			}
			.nav-link {
				flex: 1;
				text-decoration: none;
				padding: 1em;
				border-radius: 8px;
				background-color: rgb(var(--gray-light));
				transition: background-color 0.2s ease;
			}
			.nav-link:hover {
				background-color: rgb(var(--gray));
			}
			.nav-link.prev {
				text-align: left;
			}
			.nav-link.next {
				text-align: right;
			}
			.nav-link .label {
				font-size: 0.875rem;
				color: rgb(var(--gray));
				margin-bottom: 0.25em;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			.nav-link .title {
				font-weight: 600;
				color: rgb(var(--gray-dark));
				padding: 0;
				margin: 0;
			}
			.nav-placeholder {
				flex: 1;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
			{(prevPost || nextPost) && (
				<nav class="post-navigation">
					{prevPost ? (
						<a href={`/blog/${prevPost.id}/`} class="nav-link prev">
							<div class="label">← Previous</div>
							<div class="title">{prevPost.title}</div>
						</a>
					) : (
						<div class="nav-placeholder"></div>
					)}
					{nextPost ? (
						<a href={`/blog/${nextPost.id}/`} class="nav-link next">
							<div class="label">Next →</div>
							<div class="title">{nextPost.title}</div>
						</a>
					) : (
						<div class="nav-placeholder"></div>
					)}
				</nav>
			)}
		</main>
		<Footer />
	</body>
</html>
